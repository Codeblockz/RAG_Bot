# Application Configuration
APP_NAME=RAG Chatbot
APP_VERSION=0.1.0
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
API_RELOAD=true
API_WORKERS=1
API_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
API_RATE_LIMIT_REQUESTS=100

# Security Configuration
SECURITY_SECRET_KEY=your-super-secret-key-change-in-production
SECURITY_ALLOWED_API_KEYS=["your-api-key"]

# Database Configuration
DB_URL=postgresql://postgres:password@localhost:5432/rag_chatbot
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_TTL=3600

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Pinecone Configuration (if using Pinecone)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=rag-chatbot
PINECONE_DIMENSION=1536
PINECONE_METRIC=cosine

# ChromaDB Configuration (if using ChromaDB)
CHROMADB_PERSIST_DIRECTORY=./data/chromadb
CHROMADB_COLLECTION_NAME=rag-chatbot

# Service Provider Configuration
VECTOR_STORE_PROVIDER=pinecone
LLM_PROVIDER=openai
EMBEDDINGS_PROVIDER=openai

# Document Processing Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_DOCUMENT_SIZE=10485760

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
# LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5
